<% provide(:title, 'Settings') %>
<h1>Settings</h1>


<div>
   <% if current_user.admin  %>
   <%= link_to "New Connection", new_connection_path , { :class=>"btn" }  %>
   <% end %>
</div>

    <div class="container">
        <div class="row">
			<div class="col-xs-2 col-sm-2">Name</div>
			<div class="col-xs-2 col-md-2">Url</div>
			<div class="col-xs-1 col-sm-1">Actions</div>
			<div class="col-xs-7 col-sm-7"></div>
		</div>
    </div>

	<ul></ul>

	<div class="container">
    <% @connections.each do |connect| %>
        <div class="row">
			<div class="col-xs-2 col-sm-2"><%= connect.name  %></div>
			<div class="col-xs-2 col-md-2"><%= connect.url %></div>
			<div class="col-xs-1 col-sm-1"><%= link_to image_tag("view.svg" , title: "Project Details" , size: 18 ), project_path(project) %>
                                                       <% if current_user.admin  %>
  	    	                                       <%= link_to image_tag("edit.svg" , title: "Edit Project"    , size: 18 ), edit_project_path(project) %>
                                                       <% end %> </div>
			<div class="col-xs-7 col-sm-7"></div>
		</div>
    <% end %>
    </div>
  
